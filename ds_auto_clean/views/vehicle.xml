<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <data>
            <!-- Add you code here -->
            <record id="cdn_vehicle_view_list" model="ir.ui.view">
                <field name="name">cdn.vehicle.list</field>
                <field name="model">cdn.vehicle</field>
                <field name="arch" type="xml">
                    <list string="Daftar Kendaraan">
                        <field name="name"/>
                        <field name="vehicle_type"/>
                        <field name="brand"/>
                        <field name="color"/>
                        <field name="customer_id"/>
                    </list>
                </field>
            </record>

            <record id="cdn_vehicle_view_form" model="ir.ui.view">
                <field name="name">cdn.vehicle.form</field>
                <field name="model">cdn.vehicle</field>
                <field name="arch" type="xml">
                    <form string="Form Kendaraan">
                        <sheet>
                            <group>
                                <group>
                                    <field name="name" placeholder="Contoh: B 1234 ABC"/>
                                    <field name="vehicle_type" widget="radio" options="{'horizontal': true}"/>
                                    <field name="customer_id"/>
                                </group>
                                <group>
                                    <field name="brand" placeholder="Contoh: Toyota / Honda"/>
                                    <field name="color"/>
                                </group>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <!-- cdn.vehicle action window -->
            <record id="cdn_vehicle_action" model="ir.actions.act_window">
                <field name="name">cdn.vehicle.action</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">cdn.vehicle</field>
                <field name="view_mode">list,form</field>
            </record>

            <menuitem id="menu_cdn_vehicle_act" 
                    name="vehicle" 
                    parent="master_data_menu_categ" 
                    action="cdn_vehicle_action" 
                    sequence="20"/>
        </data>

</odoo>

